  <dd><%= @pin.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pin_type) %>:</strong></dt>
  <dd><%= @pin.pin_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pin_number) %>:</strong></dt>
  <dd><%= @pin.pin_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:min) %>:</strong></dt>
  <dd><%= @pin.min %></dd>
  <dt><strong><%= model_class.human_attribute_name(:max) %>:</strong></dt>
