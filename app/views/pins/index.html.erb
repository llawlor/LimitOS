<%- model_class = Pin -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:device_id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:pin_type) %></th>
      <th><%= model_class.human_attribute_name(:pin_number) %></th>
      <th><%= model_class.human_attribute_name(:min) %></th>
      <th><%= model_class.human_attribute_name(:max) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= link_to pin.id, pin_path(pin) %></td>
        <td><%= pin.device_id %></td>
        <td><%= pin.name %></td>
        <td><%= pin.pin_type %></td>
        <td><%= pin.pin_number %></td>
        <td><%= pin.min %></td>
        <td><%= pin.max %></td>
        <td><%=l pin.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      pin_path(pin), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_pin_path(pin), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      pin_path(pin),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_pin_path,
            :class => 'btn btn-primary' %>
