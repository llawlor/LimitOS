[Unit]
Description=LimitOS Service
After=network-online.target

[Service]
User=pi
WorkingDirectory=<%= params[:current_directory] || '/home/pi' %>
ExecStart=<%= params[:python3_directory] || '/user/bin/python3' %> <%= params[:current_directory] || '/home/pi' %>/limitos<%= '_dev' if !Rails.env.production? %>.py
StandardOutput=syslog
Restart=always
RestartSec=5s
StartLimitIntervalSec=0

[Install]
WantedBy=multi-user.target
Alias=limitos<%= '_dev' if !Rails.env.production? %>.service
