            #subprocess.call(['sudo', 'modprobe', 'bcm2835-v4l2'])
            subprocess.call(['sh', '-c', '<%= reinstall_script_command(@device).html_safe %>'])

    # check for updates again in an hour
    threading.Timer(3600, check_for_updates).start()

